
<h2 class="Roboto my-3 mx-auto"> Events </h2>
<% if @events%>
<table class="table table-striped table-light text-dark table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Event Type </th>
      <th scope="col">Event Location</th>
      <th scope="col">Event created @</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <% @events.each do |event| %>
  <tbody class="fs-3">
    <tr>
      <td> <%= link_to(event.title, event,  class:'text-primary') %></td>
      <td><%= event.location %> </td>
      <td><%= event.created_at %></td>
      <td><%= button_to 'Delete', event_path(@events), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
  <%end %>
</table>
<%else%>
<p>There are no events holding</p>
<%end%>
<div class="btn-group mx-5" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-info">New Event</button>
  <button type="button" class="btn btn-secondary">Middle</button>
  <button type="button" class="btn btn-warning">Right</button>
</div>
