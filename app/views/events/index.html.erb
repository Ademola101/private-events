<% if upcommig_and_past(@events)%>
<h2 class="Roboto my-3 mx-auto"> Upcoming Events </h2>
<table class="table table-striped table-light text-dark table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Event Type </th>
      <th scope="col">Event Location</th>
      <th scope="col">Event Date </th>
      <th scope="col">Event created @</th>
    </tr>
  </thead>
  <% @upcoming_events.each do |event| %>
  <tbody class="fs-3">
    <tr>
      <td> <%= link_to(event.title, event,  class:'text-primary') %></td>
      <td><%= event.location %> </td>
      <td><%= event.date %></td>
      <td><%= event.created_at %></td>
    </tr>
  </tbody>
  <%end %>
</table>

<h2 class="Roboto my-3 mx-auto"> Past Events </h2>
<table class="table table-striped table-light text-dark table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Event Type </th>
      <th scope="col">Event Location</th>
      <th scope="col">Event Date </th>
      <th scope="col">Event created @</th>
    </tr>
  </thead>
  <% @past_events.each do |event| %>
  <tbody class="fs-3">
    <tr>
      <td> <%= link_to(event.title, event,  class:'text-primary') %></td>
      <td><%= event.location %> </td>
      <td><%= event.date %></td>
      <td><%= event.created_at %></td>
    </tr>
  </tbody>
  <%end %>
</table>

<%else%>
<p>There are no events holding</p>
</p>
<%end%>
