<h1><%= current_user.email %>, create a new event:</h1>

<div class="form">
  <%= form_for @event, url: {action: 'create'} do |f| %>
    

    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %><br>

    <%= f.label :location %>
    <%= f.text_field :location %><br>

    <%= f.submit "Create Event" %>
  <% end %>
</div>
<%= link_to "Back", current_user %>
